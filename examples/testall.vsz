# load all the example documents in this directory
# generate an image for each example

import glob

for filename in glob.glob('*.vsz'):
    To('/')
    for child in GetChildren():
        Remove(child)
    Set('width', '15cm')
    Set('height', '15cm')

    if filename == 'testall.vsz':
        continue

    print filename
    execfile(filename)

    Export('test_%s.png' % filename)
